// External imports
@import url('https://fonts.googleapis.com/css?family=Cinzel')

// Color definitions
$color-primary = #445368
$color-secondary = #0D1B2B
$color-text = #9DA9AE

$color-primary-light = lighten($color-primary, 3%)
$color-primary-dark = darken($color-primary, 3%)

$color-secondary-light = lighten($color-secondary, 3%)
$color-secondary-dark = darken($color-secondary, 3%)

$color-text-light = lighten($color-text, 30%)
$color-text-dark = darken($color-text, 30%)

$color-link = $color-text-dark

// Main background
$body-background = #eee
$background = #ddd

// Font stacks
$fallback-font= 'Helvetica Neue', 'Helvetica', sans-serif
$base-font= -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', $fallback-font
$header-font= 'Cinzel', 'Lora', 'Liberation Serif', 'Times New Roman', serif, $fallback-font

// Responsive breaks
$size-xs = 480px
$size-sm = 600px
$size-md = 840px
$size-lg = 960px
$size-xl = 1280px
$size-2x = 1440px

// Spacing
$spacing = .4rem
$spacing-sm = .2rem
$spacing-lg = .8rem

// Borders
$border-radius = .1rem

// Typography
$html-font-size = 20px
$html-line-height = 1.428571429
$font-size = .7rem
