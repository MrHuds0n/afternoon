.cards
	width 100%
	display flex
	flex-wrap wrap
	justify-content center

	&.lg
		.card
			min-width $size-lg
		
	&.md
		.card
			min-width 45%
			@media (max-width $size-md)
				min-width 100%

	&.sm
		.card
			min-width 30%
			@media (max-width $size-md)
				min-width 45%
			@media (max-width $size-sm)
				min-width 100%

	.card
		flex 1
		padding $spacing
		margin $spacing
		
		mixin-standard-gradient($background, rgba($background, .5))

		border-radius $border-radius

		display flex
		flex-direction column
		justify-content space-between

		&.small
			font-size $font-size-sm

		p
			height 100%
