.form-row
	display flex
	flex-direction row

.form-control
	mixin-flex(1)
	padding $spacing

	label
		font-size $font-size-sm
		font-family $base-font

		user-select none

	input[type='text'], textarea
		appearance none
		outline none
		border none

		width 100%

		padding $spacing
		color $color-text
		font-family $base-font

		mixin-focus-gradient($color-secondary-light, rgba($color-secondary, .7))

	textarea
		height 10em

	.form-control-binary
		display flex
		flex-direction row
		align-items center
		background $color-secondary
		margin $spacing-sm 0

		input[type='radio']
			margin $spacing

			height 1em
			width 1em

			appearance none
			-webkit-appearance none

			background transparent
			border .15em $color-text solid
			border-radius 100%
			
			&:checked
				background $color-text

		label
			padding 0 $spacing
			border-left 1px $color-primary solid

	//radio

	//checkbox

	//labels
