.wrapper
	display flex

	height 100vh
	width 100vw

.main
	flex $main-flex

	width 85%

	display flex
	flex-direction column

.content
	padding $spacing
	overflow-x auto

.container
	margin 0 auto
	padding 0 $spacing
	width 100%

	&.xs
		max-width $size-xs
	&.sm
		max-width $size-sm
	&.md
		max-width $size-md
	&.lg
		max-width $size-lg
	&.xl
		max-width $size-xl
	&.xxl
		max-width $size-2x
