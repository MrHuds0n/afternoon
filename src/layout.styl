.wrapper
	display flex

	height 100vh
	width 100vw


.side-menu
	flex $side-menu-flex	
	width 100%
	height 100%

	background $background

	@media screen and (max-width $size-sm)
		position absolute
		z-index 100
		max-width ($size-xs / 2)

.main
	flex $main-flex
	width 100%
	position relative

.navbar
	padding $spacing
	background $background

.content
	padding $spacing

.container
	margin 0 auto
	padding 0 $spacing
	width 100%

	&.xs
		max-width $size-xs
	&.sm
		max-width $size-sm
	&.md
		max-width $size-md
	&.lg
		max-width $size-lg
	&.xl
		max-width $size-xl
	&.xxl
		max-width $size-2x
